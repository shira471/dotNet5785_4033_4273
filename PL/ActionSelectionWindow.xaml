<Window x:Class="PL.ActionSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Action" Height="400" Width="800" WindowStartupLocation="CenterScreen"
        Background="AliceBlue" FontFamily="Segoe UI">

    <Grid Margin="10">
        <!-- הגדרת שורות וטורים -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- טקסט דינמי -->
        <TextBlock Text="{Binding ActionMessage}" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="2"
                   Margin="10" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" />

        <!-- כפתורים -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Grid.Row="1" Margin="10">
            <Button Content="Update" Width="100" Margin="10" Click="Update_Click" 
                    Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" />
            <Button Content="Delete" Width="100" Margin="10" Click="Delete_Click" 
                    Background="LightCoral" Foreground="White" FontWeight="Bold" />
            <Button Content="Cancel" Width="100" Margin="10" Click="Cancel_Click" 
                    Background="LightGoldenrodYellow" Foreground="Black" FontWeight="Bold" />
            <Button Content="View" Width="100" Margin="10" Click="View_Click" 
        Background="Yellow" Foreground="Black" FontWeight="Bold" />
            <Button Content="View call details" Width="100" Margin="10" Click="ViewCall_Click" 
Background="SeaGreen" Foreground="Black" FontWeight="Bold" />
        </StackPanel>

    </Grid>
</Window>
