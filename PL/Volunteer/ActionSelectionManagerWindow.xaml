<Window x:Class="PL.ActionSelectionManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Action" Height="400" Width="600" WindowStartupLocation="CenterScreen"
        Background="AliceBlue" FontFamily="Segoe UI">

    <Grid Margin="10">
        <!-- הגדרת שורות וטורים -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Select Action" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,20" 
                   Foreground="Green" />

        <!-- טקסט דינמי -->
        <TextBlock Text="{Binding ActionMessage}" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2"
                   Margin="10" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" />

        <!-- כפתורים -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Grid.Row="2" Grid.ColumnSpan="2" Margin="10">
            <Button Content="Update" Width="100" Margin="10" Click="Update_Click" 
                    Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" />
            <Button Content="Delete" Width="100" Margin="10" Click="Delete_Click" 
                    Background="LightCoral" Foreground="White" FontWeight="Bold" />
            <Button Content="Cancel Assignment" Width="150" Margin="10" Click="Cancel_Click" 
                    Background="LightGoldenrodYellow" Foreground="Black" FontWeight="Bold" />
            <Button Content="View Call" Width="100" Margin="10" Click="btnView_Click" 
                    Background="LightGreen" Foreground="White" FontWeight="Bold" />
        </StackPanel>
       
    </Grid>
</Window>
