<Window x:Class="PL.Volunteer.AddVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="800" Background="AliceBlue" FontFamily="Segoe UI">

    <Grid Margin="10">
        <!-- הגדרת שורות וטורים -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Add Volunteer" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,20" 
                   Foreground="Green" />

        <!-- ID -->
        <Label Content="ID:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Full Name -->
        <Label Content="Full Name:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Phone -->
        <Label Content="Phone:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Address -->
        <Label Content="Address:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.Address, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Email -->
        <Label Content="Email:" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Is Active -->
        <Label Content="Is Active:" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="5" />

        <!-- Role -->
        <Label Content="Role:" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <ComboBox ItemsSource="{Binding Roles}" 
                  SelectedItem="{Binding CurrentVolunteer.Role, Mode=TwoWay}" 
                  Grid.Row="7" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Max Distance -->
        <Label Content="Max Distance:" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay}" Grid.Row="8" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <!-- Password -->
        <Label Content="Password:" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5" />
        <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 Grid.Row="9" Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="5" />

        <StackPanel Orientation="Horizontal" Grid.Row="10" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10">
            <Button Content="Back" Click="btnBack_Click" Height="40" Width="150" Margin="5"
            Background="LightCoral" Foreground="White" FontWeight="Bold" />
            <Button Content="{Binding ButtonText}" Click="btnAddUpdate_Click" Height="40" Width="150" Margin="5"
            Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
