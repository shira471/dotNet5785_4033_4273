<Window x:Class="PL.Volunteer.AddVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="AddVolunteerWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ID -->
            <RowDefinition Height="Auto"/>
            <!-- Full Name -->
            <RowDefinition Height="Auto"/>
            <!-- Phone -->
            <RowDefinition Height="Auto"/>
            <!-- Address -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Is Active -->
            <RowDefinition Height="*"/>
            <!-- Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ID -->
        <Label Content="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Full Name -->
        <Label Content="Full Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Phone -->
        <Label Content="Phone:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Address -->
        <Label Content="Address:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentVolunteer.Address, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Email -->
        <Label Content="Email:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Is Active -->
        <Label Content="Is Active:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"/>

        <!-- Add/Update Button -->
        <Button Content="{Binding ButtonText}" Grid.Row="6" Grid.ColumnSpan="2" Height="40" Width="120" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnAddUpdate_Click"/>
    </Grid>
</Window>
