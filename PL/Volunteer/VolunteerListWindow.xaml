<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Volunteer List Window" Height="640" Width="800" Background="AliceBlue" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="List of all volunteers" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" Foreground="Green" />

        <!-- DataGrid -->
        <DataGrid ItemsSource="{Binding Volunteers}" 
          SelectedValue="{Binding SelectedVolunteer, Mode=TwoWay}"
          AutoGenerateColumns="False" 
          Grid.Row="1" 
          Margin="10" 
          Background="White" 
          BorderBrush="Gray"
          Foreground="Black"
          MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Email" Binding="{Binding mail}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Calls" Binding="{Binding TotalCallsHandled}" Width="100" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- כפתורים -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add" Width="139" Margin="5" Click="btnAdd_Click" Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold"/>
            <Button Content="View" Width="150" Margin="5" Click="btnView_Click" IsEnabled="{Binding SelectedVolunteer}" Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold"/>
            <Button Content="Back" Width="150" Margin="5" Click="btnBack_Click" Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
