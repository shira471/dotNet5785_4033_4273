<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Window" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Volunteer Window" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20" />

        <!-- פרטי מתנדב לעדכון -->
        <StackPanel Grid.Row="1" Margin="0,20,20,0">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="ID:" Width="150" />
                <TextBox Width="200" IsEnabled="False" Text="{Binding CurrentVolunteer.Id}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Full Name:" Width="150" />
                <TextBox Width="200" IsEnabled="{Binding IsEditing}" Text="{Binding CurrentVolunteer.FullName}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Phone:" Width="150" />
                <TextBox Width="200" IsEnabled="{Binding IsEditing}" Text="{Binding CurrentVolunteer.Phone}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Email:" Width="150" />
                <TextBox Width="200" IsEnabled="{Binding IsEditing}" Text="{Binding CurrentVolunteer.Email}"/>
                <!-- כפתורים -->
            </StackPanel>
            <Button Content="Update details"  Width="150" Click="EnableEditing_Click"  />
            <Button Content="Save" Width="150" Click="SaveChanges_Click" IsEnabled="{Binding IsEditing}"  />


            <!-- פרטי קריאה בטיפול -->
            <GroupBox Header="call in progress" Grid.Row="2" Margin="10">
                <StackPanel Margin="5">
                    <TextBlock FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding CallDetails}"/>
                    <Button Content="End call" Width="200" HorizontalAlignment="Center" Margin="5"
                Click="FinishCall_Click" />
                    <Button Content="Cancel call" Width="200" HorizontalAlignment="Center" Margin="5"
                Click="SelectCall_Click" />
                </StackPanel>
            </GroupBox>
        </StackPanel>


        <!-- כפתורים לגישה למסכים נוספים -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Select call to handle" Width="150" Margin="5" Click="SelectCall_Click" />
            <Button Content="My calls history" Width="150" Margin="5" Click="ShowMyCallsHistory_Click" />
        </StackPanel>
    </Grid>
</Window>
