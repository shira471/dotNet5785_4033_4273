<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Window" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="מסך מתנדב" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20" />

        <!-- פרטי מתנדב לעדכון -->
        <StackPanel Grid.Row="1" Margin="0,20,20,0">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="תעודת זהות:" Width="150" />
                <TextBox Name="txtId" Width="200" IsEnabled="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="שם מלא:" Width="150" />
                <TextBox Name="txtFullName" Width="200" IsEnabled="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="טלפון:" Width="150" />
                <TextBox Name="txtPhone" Width="200" IsEnabled="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="אימייל:" Width="150" />
                <TextBox Name="txtEmail" Width="200" IsEnabled="False" />
                <!-- כפתורים -->
            </StackPanel>
            <Button Content="עדכון פרטים"  Width="150" Click="EnableEditing_Click"/>
            <Button Content="שמור" Width="150" Click="SaveChanges_Click" IsEnabled="False" Name="btnSave" />
            <!-- פרטי קריאה בטיפול -->
            <GroupBox Header="קריאה בטיפול" Grid.Row="2" Margin="10">
                <StackPanel Margin="5">
                    <TextBlock Name="txtCallDetails" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" />
                    <Button Content="סיים טיפול בקריאה" Width="200" HorizontalAlignment="Center" Margin="5"
                Click="FinishCall_Click" />
                    <Button Content="בחר קריאה לטיפול" Width="200" HorizontalAlignment="Center" Margin="5"
                Click="SelectCall_Click" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <!-- כפתורים לגישה למסכים נוספים -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="בחירת קריאה לטיפול" Width="150" Margin="5" Click="SelectCall_Click" />
            <Button Content="היסטוריית קריאות שלי" Width="150" Margin="5" Click="ShowMyCallsHistory_Click" />
        </StackPanel>
    </Grid>
</Window>
