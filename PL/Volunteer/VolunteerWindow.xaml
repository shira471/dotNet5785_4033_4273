<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Window" Height="600" Width="800" Background="AliceBlue" FontFamily="Segoe UI" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Welcome!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20" Foreground="Green" />

        <!-- פרטי מתנדב לעדכון -->
        <StackPanel Grid.Row="1" Margin="0,20,20,0">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="ID:" Width="150" />
                <TextBox Width="200" IsEnabled="False" Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Full Name:" Width="150" />
                <TextBox Width="200" Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Phone:" Width="150" />
                <TextBox Width="200" Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Email:" Width="150" />
                <TextBox Width="200" Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Address:" Width="150" />
                <TextBox Width="200" Text="{Binding CurrentVolunteer.Address, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Active:" Width="150" />
                <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay}" VerticalAlignment="Center"
                          Checked="ActiveCheckBox_Checked" Unchecked="ActiveCheckBox_Unchecked" />
            </StackPanel>

            <!-- כפתורים לעדכון ושמירה -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button Content="Update details" Width="150" Margin="5" Click="SaveChanges_Click" Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>

        <!-- פרטי קריאה בטיפול -->
        <GroupBox Header="Call in Progress" Grid.Row="2" Margin="10" Background="LightGray" BorderBrush="Gray">
            <StackPanel Margin="5">
                <TextBlock FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding CallDetails, Mode=TwoWay}" Margin="5" />
                <Button Content="End call" Width="200" HorizontalAlignment="Center" Margin="5" Click="FinishCall_Click"
                        Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" IsEnabled="{Binding IsCallActive}" />
                <Button Content="Cancellation of treatment" Width="200" HorizontalAlignment="Center" Margin="5" Click="CancellationCall_Click"
                        Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" IsEnabled="{Binding IsCallActive}" />
            </StackPanel>
        </GroupBox>

        <!-- כפתורים לגישה למסכים נוספים -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Select call to handle" Width="150" Margin="5" Click="SelectCall_Click"
                    Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" IsEnabled="{Binding IsVolunteerActive}" />
            <Button Content="My calls history" Width="150" Margin="5" Click="ShowMyCallsHistory_Click"
                    Background="LightBlue" Foreground="DarkBlue" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>