<Window x:Class="PL.Calls.SelectCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Calls"
        mc:Ignorable="d"
        Title="SelectCallWindow" Height="640" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="433*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- DataGrid -->
        <DataGrid ItemsSource="{Binding Calls}" 
            SelectedValue="{Binding SelectedCall, Mode=TwoWay}"
           AutoGenerateColumns="False" 
           Grid.Row="1" 
           Grid.ColumnSpan="2"
           Margin="10">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Call ID" Binding="{Binding Id}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Brief Description" Binding="{Binding FullName}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding Phone}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Status" Binding="{Binding mail}" Width="200" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
