<Window x:Class="PL.Call.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="AddCallWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ID -->
            <RowDefinition Height="Auto"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- open time -->
            <RowDefinition Height="Auto"/>
            <!-- Address -->
            <RowDefinition Height="Auto"/>
            <!-- call type -->
            <RowDefinition Height="Auto"/>
            <!-- maximum end time -->
            <RowDefinition Height="*"/>
            <!-- Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- Description -->
        <Label Content="Description:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentCall.Description, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- open time -->
        <Label Content="open time:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentCall.OpenTime, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Max Time -->
        <Label Content="maximum Time:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentCall.MaxEndTime, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Address -->
        <Label Content="Address:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentCall.Address, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

        <!-- Call Type -->
        <Label Content="Call Type:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding CallTypes}"
          SelectedItem="{Binding CurrentCall.CallType,Mode=TwoWay}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Width="300"/>

  

        <!-- Add/Update Button -->
        <Button Content="{Binding ButtonText}" Grid.Row="6" Grid.ColumnSpan="2" Height="40" Width="120" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnAddUpdate_Click"/>
    </Grid>
</Window>
