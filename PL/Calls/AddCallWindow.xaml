<Window x:Class="PL.Call.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Add Call" Height="450" Width="800" Background="LightYellow" FontFamily="Segoe UI">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Add Call"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkSlateBlue"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,20" />

        <!-- Description -->
        <Label Content="Description:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
        <TextBox Text="{Binding CurrentCall.Description, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="300" Background="WhiteSmoke" BorderBrush="Gray" />

        <!-- Open Time -->
        <Label Content="Open Time:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left">
            <DatePicker SelectedDate="{Binding CurrentCall.OpenTime, Mode=TwoWay}" Width="200" />
            <TextBox Text="{Binding CurrentCall.OpenTime, StringFormat='{}{0:HH:mm}', Mode=TwoWay}" 
                     Width="80" Margin="10,0,0,0" Background="WhiteSmoke" BorderBrush="Gray" />
        </StackPanel>

        <!-- Max End Time -->
        <Label Content="Maximum Time:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left">
            <DatePicker SelectedDate="{Binding CurrentCall.MaxEndTime, Mode=TwoWay}" Width="200" />
            <TextBox Text="{Binding CurrentCall.MaxEndTime, StringFormat='{}{0:HH:mm}', Mode=TwoWay}" 
                     Width="80" Margin="10,0,0,0" Background="WhiteSmoke" BorderBrush="Gray" />
        </StackPanel>

        <!-- Address -->
        <Label Content="Address:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
        <TextBox Text="{Binding CurrentCall.Address, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Width="300" Background="WhiteSmoke" BorderBrush="Gray" />

        <!-- Call Type -->
        <Label Content="Call Type:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
        <ComboBox ItemsSource="{Binding CallTypes}"
                  SelectedItem="{Binding CurrentCall.CallType,Mode=TwoWay}" 
                  Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Width="300" Background="WhiteSmoke" BorderBrush="Gray" />

        <!-- כפתורים -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Back" 
                    Click="btnBack_Click" 
                    Height="40" Width="150" 
                    Margin="10" Background="LightCoral" 
                    Foreground="White" FontWeight="Bold" />
            <Button Content="{Binding ButtonText}" 
                    Click="btnAddUpdate_Click" 
                    Height="40" Width="150" 
                    Margin="10" Background="DodgerBlue" 
                    Foreground="White" FontWeight="Bold" />
        </StackPanel>

    </Grid>
</Window>