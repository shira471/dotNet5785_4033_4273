<Window x:Class="PL.CallsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding vm, RelativeSource={RelativeSource Mode=Self}}"
        Title="Calls Management" Height="450" Width="800"
        Background="LightGray" FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filter and Sort Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Top">
            <TextBlock Text="Filter by:" Margin="5" VerticalAlignment="Center" />
            <ComboBox Width="150" ItemsSource="{Binding FilterFields}" SelectedItem="{Binding SelectedFilterField}" Margin="5" />
            <TextBox Width="200" Text="{Binding SelectedFilterValue, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

            <TextBlock Text="Sort by:" Margin="5" VerticalAlignment="Center" />
            <ComboBox Width="150" ItemsSource="{Binding SortFields}" SelectedItem="{Binding SelectedSortField}" Margin="5" />
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="CallDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserSortColumns="True" 
                  IsReadOnly="True" 
                  ItemsSource="{Binding Calls}" 
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}" 
                  Grid.Row="1" 
                  Margin="0,10"
                  Background="WhiteSmoke" 
                  AlternatingRowBackground="LightBlue" 
                  BorderBrush="Gray" 
                  BorderThickness="1"
                  MouseDoubleClick="CallDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID" Binding="{Binding CallId}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Call Type" Binding="{Binding CallType}" />
                <DataGridTextColumn Header="Volunteer Name" Binding="{Binding LastVolunteerName}" />
                <DataGridTextColumn Header="Total Allocations" Binding="{Binding TotalAssignments}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add Call" Width="150" Margin="5" Click="btnAdd_Click" Background="DodgerBlue" Foreground="White" FontWeight="Bold" Padding="5" />
            <!--<Button Content="Cancel Call" Width="150" Margin="5" Click="btnCancel_Click" IsEnabled="{Binding SelectedCall}" Background="Red" Foreground="White" FontWeight="Bold" Padding="5" />-->
            <Button Content="Back" Width="150" Margin="5" Click="btnBack_Click" Background="LightCoral" Foreground="White" FontWeight="Bold" Padding="5" />
        </StackPanel>
    </Grid>
</Window>
