<Window x:Class="PL.CallsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding vm, RelativeSource={RelativeSource Mode=Self}}"
        Title="Calls Management" Height="450" Width="800"
        Background="LightGray" FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="500*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <DataGrid x:Name="CallDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserSortColumns="True" 
                  IsReadOnly="True" 
                  ItemsSource="{Binding Calls}" 
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}" 
                  Grid.Row="1" 
                  Margin="0,10"
                  Background="WhiteSmoke" 
                  AlternatingRowBackground="LightBlue" 
                  BorderBrush="Gray" 
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID" Binding="{Binding CallId}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <!--<DataGridTextColumn Header="Details" Binding="{Binding }" />-->
                <DataGridTextColumn Header="call Type" Binding="{Binding CallType}" />
                <!--<DataGridTextColumn Header="Adress" Binding="{Binding }" />-->
                <DataGridTextColumn Header="Volunteer Name" Binding="{Binding LastVolunteerName}" />
                <DataGridTextColumn Header="Total Allocations" Binding="{Binding TotalAssignments}" />
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" 
                                    Click="DeleteCall_Click" 
                                    Background="Tomato" 
                                    Foreground="White" 
                                    FontWeight="Bold" 
                                    Padding="5,2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons Section -->
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="2" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    Margin="10">
            <Button Content="Add Call" 
                    Width="150" 
                    Margin="5" 
                    Click="btnAdd_Click" 
                    Background="DodgerBlue" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="5" />
            <Button Content="Update Call" 
                    Width="150" 
                    Margin="5" 
                    Click="btnUpdate_Click" 
                    IsEnabled="{Binding SelectedCall}" 
                    Background="ForestGreen" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="5" />
            <Button Content="View Call" 
                    Width="150" 
                    Margin="5" 
                    Click="btnView_Click" 
                    IsEnabled="{Binding SelectedCall}" 
                    Background="DarkOrange" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Padding="5" />
        </StackPanel>
    </Grid>
</Window>
