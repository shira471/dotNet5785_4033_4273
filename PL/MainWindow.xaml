<Window x:Class="PL.Volunteer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400" Background="#F0F8FF" Closed="AdminWindow_Closed">

    <!-- קביעת DataContext עבור ViewModel -->
    <Window.DataContext>
        <local:MainWindowVM />
    </Window.DataContext>

    <!-- משאבים (Resources) - הוספת קונברטרים -->
    <Window.Resources>
        <converters:SimulatorButtonConverter x:Key="SimulatorButtonConverter"/>
        <converters:InverseBooleanConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- כותרת מסך -->
        <TextBlock Text="Welcome!" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="#2E8B57"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- שדה קלט - מזהה משתמש -->
        <TextBlock Text="Enter your ID:" 
                   FontSize="14"
                   Foreground="#2F4F4F"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,5"
                   Grid.Row="1" />

        <TextBox Grid.Row="2"
                 Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" 
                 HorizontalAlignment="Stretch" 
                 Width="300" 
                 Margin="0,0,0,10" 
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#FFFFFF" 
                 BorderBrush="#4682B4" />

        <!-- שדה קלט - סיסמה -->
        <TextBlock Grid.Row="3"
                   Text="Enter your password:" 
                   FontSize="14"
                   Foreground="#2F4F4F"
                   HorizontalAlignment="Left" 
                   Margin="0,10,0,5"/>

        <PasswordBox Grid.Row="4"
                     Margin="30,0,30,212"
                     Background="#FFFFFF"
                     BorderBrush="#4682B4"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- כפתור התחברות -->
        <Button Content="Login" 
                Grid.Row="4" 
                Width="300"
                HorizontalAlignment="Center"
                Background="#4682B4" 
                Foreground="White" 
                FontSize="16"
                FontWeight="Bold"
                Margin="0,192,0,0"
                Click="Login_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <!-- הודעת שגיאה -->
        <!--
        <TextBlock Text="{Binding ErrorMessage}" 
                   Foreground="Red" 
                   Visibility="{Binding ErrorVisibility, Converter={StaticResource BoolToVisibilityConverter}}" 
                   HorizontalAlignment="Center"
                   FontSize="12"
                   Grid.Row="6" />-->
    </Grid>
</Window>
