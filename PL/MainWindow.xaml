<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="MainWindow_Loaded" Closed="MainWindow_Closed" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="10">
        <!-- הגדרת שורות ועמודות ב-Grid הראשי -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        
        
         <!--אזור משתני תצורה--><!-- 
        
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            
         --><!--משתנה תצורה לעריכה--><!-- 
        
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5">
                <Label Content="risk time span" VerticalAlignment="Center" Margin="5" />
                <TextBox Text= "{Binding MaxYearRange, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Update risk time spane" Click="UpdateMaxRange_Click" Width="150" Margin="5"  />
            </StackPanel>
        </Grid>

         --><!--כפתורים כלליים--><!-- 
        
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
            <Button Content="show list" Width="200" Margin="5" Click="OpenListView_Click" />
            <Button Content="initialize data base" Width="200" Margin="5" Click="InitializeDB_Click" />
            <Button Content="reset data base" Width="200" Margin="5" Click="ResetDB_Click" />
        </StackPanel>-->

        <TextBox x:Name="txtId"  HorizontalAlignment="Center" Margin="0,64,0,0" Grid.Row="2" TextWrapping="Wrap" Text="enter your ID:" VerticalAlignment="Top" Width="120"/>

        <!-- טקסט ברירת מחדל -->
        <TextBlock x:Name="txtPasswordPlaceholder" Text="enter your password:" 
             VerticalAlignment="Top" HorizontalAlignment="Left" 
             Margin="331,87,0,0" Foreground="Gray" Visibility="Visible" Grid.Row="2" />
        <!-- שדה סיסמה -->
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="328,104,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" IsEnabled="False"  AutomationProperties.AutomationId="" AutomationProperties.AccessKey="e"/>
        <!-- כפתור התחברות -->
        <Button Content="Login" Click="Login_Click" Margin="0,179,0,3" Grid.Row="2" />

        <!-- תצוגת שגיאה -->
        <TextBlock x:Name="lblError" Foreground="Red" Visibility="Collapsed" />
    </Grid>
</Window>
